{
    "name": "tx-money / java / reconfigure 3->1->3 tx",
    "scenario": "tx_money_single_fault",
    "accounts": 6,
    "replication": 3,
    "workload": {
        "name": "tx-money / java",
        "checks": [
            { "name": "consistency" },
            { "name": "stat" }
