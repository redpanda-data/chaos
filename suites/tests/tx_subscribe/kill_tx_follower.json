{
    "name": "tx-subscribe / java / kill tx follower",
    "scenario": "tx_subscribe_single_fault",
    "source": "source1",
    "partitions": 3,
    "target": "target1",
    "group_id": "group1",
    "replication": 3,
    "workload": {
        "name": "tx-subscribe / java",
        "checks": [
            { "name": "consistency" },
            { "name": "stat" }
        ],
        "settings": {
            "retries": 5
        }
    },
    "fault": {
        "name": "kill_follower",
        "topic": "tx",
        "namespace": "kafka_internal",
        "partition": 0,
        "alias": "kill_tx_follower"
    },
    "checks": [
        { "name": "redpanda_process_liveness" },
        { "name": "progress_during_fault", "min-delta": 100, "selector": "any" },
        { "name": "catch_log_errors", "pattern": "a producer id is already involved in a tx with tx_seq" }
    ]
}